{
    "name": "phptransformers/twig",
    "description": "Twig implementation of PhpTransformer.",
    "keywords": [
        "PhpTransformers", "phptransformer", "Twig", "Template Engine", "Templates"
    ],
    "homepage": "https://github.com/phptransformers/twig",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Loach",
            "email": "robloach@gmail.com",
            "homepage": "http://robloach.net",
            "role": "Developer"
        },
        {
            "name": "MacFJA",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0",
        "phptransformers/phptransformer": "~0.0.1",
        "twig/twig": "~1.18.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.6",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "PhpTransformers\\Twig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTransformers\\Twig\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --coverage-text --coverage-clover=coverage.clover",
        "phpcs": "phpcs"
    }
}
